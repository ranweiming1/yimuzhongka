}
.huay {
  width: 630rpx;
  float: left;
  color: #999;
  line-height: 40rpx;
}
.publish {
  background: #2b5cff;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 750rpx;
  height: 100rpx;
  overflow: hidden;
}
.publish .imgBox_b image {
  width: 38rpx;
  height: 38rpx;
  float: left;
  padding-left: 38%;
  padding-top: 30rpx;
  padding-right: 20rpx;
}
.publish .textBox_b {
  font-size: 30rpx;
  line-height: 90rpx;
  color: #fff;
  float: left;
