.top {
  width: 750rpx;
  margin: 0 auto;
  overflow: hidden;
  border-bottom: 1px solid #e5e5e5;
}
.top .textBox {
  padding-left: 40%;
}
.top .textBox text {
  font-size: 38rpx;
  color: #333;
  float: left;
  line-height: 90rpx;
}
.top .imgBox {
  float: right;
}
.top .imgBox image {
  width: 34rpx;
  height: 32rpx;
  padding: 30rpx;
}
.neir {
  overflow: hidden;
}
.neir .title {
  font-size: 36rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #333;
  text-align: center;
}
.neir .left {
  color: #999;
  font-size: 24rpx;
  line-height: 30rpx;
  float: left;
  padding-left: 25rpx;
}
.neir .right {
  color: #999;
  font-size: 24rpx;
  line-height: 30rpx;
  float: right;
  padding-right: 25rpx;
}
.img {
  padding-left: 25rpx;
  padding-top: 30rpx;
}
.img image {
  display: block;
  width: 700rpx;
  height: 300rpx;
}
.txt {
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
  padding: 25rpx;
}
.one_line {
  background-color: #f8f8f8;
  width: 750rpx;
  height: 20rpx;
}
.title_a {
  font-size: 32rpx;
  padding-left: 20rpx;
  line-height: 70rpx;
  color: #333;
}
.toux {
  padding-top: 20rpx;
  padding-left: 20rpx;
  width: 750rpx;
  overflow: hidden;
  border-bottom: 1px solid #ccc;
  padding-bottom: 20rpx;
}
.toux image {
  width: 80rpx;
  height: 80rpx;
  -webkit-border-radius: 150rpx;
          border-radius: 150rpx;
}
.evaluate {
  width: 750rpx;
  margin-bottom: 100rpx;
}
.mingc {
  float: left;
  width: 630rpx;
}
.mingc text {
  font-size: 26rpx;
  padding-left: 20rpx;
}
.mingc .time {
  float: right;
  color: #333;
  font-size: 26rpx;
  line-height: 50rpx;
}
.imgBox_a {
