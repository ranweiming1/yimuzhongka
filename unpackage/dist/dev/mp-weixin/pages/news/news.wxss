.float {
  position: fixed;
  bottom: 30%;
  right: 10rpx;
  z-index: 99999;
}
.float image {
  width: 185rpx;
  height: 150rpx;
}
.one_line {
  position: fixed;
  top: 80rpx;
  left: 0rpx;
  z-index: 2;
  width: 750rpx;
  height: 1rpx;
  border-top: 1px solid #e5e5e5;
}
.list {
  font-size: 30rpx;
  color: #333333;
  position: relative;
  height: 210rpx;
  margin-top: 30rpx;
  border-bottom: 1px dotted #ccc;
}
.list .span {
  font-size: 24rpx;
  color: #999;
}
.list .tit {
  width: 450rpx;
  padding-right: 10rpx;
  float: left;
  padding-left: 20rpx;
}
.list .tit text {
  line-height: 50rpx;
}
.list .span text {
  position: absolute;
  bottom: 30rpx;
  left: 20rpx;
}
.list .img {
  float: left;
}
.list .img image {
  width: 255rpx;
  height: 180rpx;
}

