.top {
  width: 750rpx;
  margin: 0 auto;
  overflow: hidden;
  border-bottom: 1px solid #e5e5e5;
}
.top .textBox {
  padding-left: 40%;
}
.top .textBox text {
  font-size: 38rpx;
  color: #333;
  float: left;
  line-height: 100rpx;
}
.top .imgBox {
  float: right;
  padding: 30rpx;
}
.top .imgBox image {
  width: 36rpx;
  height: 36rpx;
}
.Box {
  width: 750rpx;
  overflow: hidden;
}
.Box .left {
  text-align: center;
  width: 240rpx;
  height: 1135rpx;
  float: left;
  background-color: #f6f6f6;
}
.Box .left .on {
  height: 100rpx;
  background-color: #fff;
}
.Box .left .on image {
  float: left;
  padding-top: 35rpx;
  width: 6rpx;
  height: 30rpx;
}
.Box .left .on text {
  color: #007AFF;
  line-height: 100rpx;
  font-size: 30rpx;
}
.Box .left .none {
  height: 100rpx;
  background-color: #f6f6f6;
}
.Box .left .none text {
  color: #333;
  line-height: 100rpx;
  font-size: 30rpx;
}
.Box .right {
  width: 510rpx;
  text-align: center;
  overflow: hidden;
  background-color: #fff;
}
.Box .right .li {
  margin-top: 20rpx;
  width: 170rpx;
  float: left;
}
.Box .right .li .imgpp image {
  width: 120rpx;
  height: 120rpx;
}
.Box .right .li .zhiya text {
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
}

