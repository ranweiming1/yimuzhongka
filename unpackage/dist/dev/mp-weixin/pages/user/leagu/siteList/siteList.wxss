checkbox {
  border-radius: 50%;
}
.top {
  width: 750rpx;
  margin: 0 auto;
  overflow: hidden;
  border-bottom: 1px solid #e5e5e5;
}
.top .textBox {
  padding-left: 40%;
}
.top .textBox text {
  font-size: 38rpx;
  color: #333;
  float: left;
  line-height: 90rpx;
}
.top .imgBox {
  float: right;
  padding: 20rpx;
}
.top .imgBox text {
  font-size: 26rpx;
  color: #333;
}
.siteBox {
  width: 710rpx;
  margin: 20rpx;
  overflow: hidden;
  padding-top: 20rpx;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #e5e5e5;
}
.siteBox .radios {
  float: left;
  padding-top: 30rpx;
  padding-right: 10rpx;
}
.siteBox .content {
  float: left;
  width: 80%;
}
.siteBox .content .nome {
  float: left;
  font-size: 30rpx;
  color: #333;
  padding-right: 10rpx;
}
.siteBox .content .call {
  float: left;
  font-size: 24rpx;
  color: #666;
  line-height: 40rpx;
  padding-right: 10rpx;
}
.siteBox .content .label {
  float: left;
  font-size: 18rpx;
  color: #ff6633;
  padding: 5rpx;
  margin-top: 5rpx;
  background-color: #fdf1ec;
}
.siteBox .content .p {
  float: left;
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
}
.siteBox .edit {
  float: right;
  margin-top: 20rpx;
  border-left: 1px solid #e5e5e5;
}
.siteBox .edit text {
  font-size: 24rpx;
  color: #999;
  line-height: 80rpx;
  padding-left: 20rpx;
}
.bott {
  width: 670rpx;
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
}
.bott button {
  border-radius: 40rpx;
  font-family: Microsoft YaHei;
}

