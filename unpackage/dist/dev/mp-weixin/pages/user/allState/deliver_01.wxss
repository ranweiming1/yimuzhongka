page {
  background-color: #f7f7f7;
}
.xinxi {
  margin-bottom: 20rpx;
  background-color: #fff;
  overflow: hidden;
  width: 710rpx;
  padding: 20rpx;
  border-bottom: 1px dotted #ccc;
}
.xinxi .imgBox_a {
  float: left;
  padding-top: 20rpx;
}
.xinxi .imgBox_a image {
  width: 215rpx;
  height: 160rpx;
}
.xinxi .txt_c {
  float: left;
  width: 460rpx;
  padding-left: 20rpx;
}
.xinxi .txt_c .title {
  padding-top: 10rpx;
}
.xinxi .txt_c .title text {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333;
}
.xinxi .txt_c .spec {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #666;
}
.xinxi .txt_c .radColor {
  float: left;
  color: #ff0000;
  font-size: 32rpx;
}
.xinxi .txt_c .jia {
  float: right;
}
.xinxi .txt_c .jia text {
  font-size: 20rpx;
  color: #666;
}
.radios {
  background-color: #fff;
  width: 710rpx;
  padding: 20rpx;
  overflow: hidden;
  padding-top: 10rpx;
  overflow: hidden;
  border-bottom: 1px solid #f7f7f7;
}
.radios text {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  padding-right: 10rpx;
}
.radios image {
  width: 12rpx;
  height: 26rpx;
}
.radios .guanb {
  float: right;
}
.radios .guanb text {
  font-size: 28rpx;
  color: #999;
}
.basic {
  width: 710rpx;
  background-color: #fff;
  overflow: hidden;
  padding: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 20rpx solid #f7f7f7;
}
.basic .left_a {
  float: left;
}
.basic .left_a text {
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
}
.basic .right_a {
  float: right;
  padding-right: 10rpx;
}
.basic .right_a text {
  font-size: 28rpx;
  float: right;
  line-height: 50rpx;
}
.basic .right_a text text {
  color: #ff670c;
}
.basic .right_a .img_l {
  float: left;
  padding-right: 10rpx;
  padding-top: 5rpx;
}
.basic .right_a .img_l image {
  width: 45rpx;
  height: 45rpx;
}
.basic .right_a .img_a {
  float: right;
  padding: 20rpx 0rpx 20rpx 20rpx;
}
.basic .right_a .img_a image {
  width: 12rpx;
  height: 14rpx;
  display: block;
}

