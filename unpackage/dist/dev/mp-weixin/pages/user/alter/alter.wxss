page {
  background-color: #f7f7f7;
}
.basic {
  margin-top: 20rpx;
  width: 710rpx;
  background-color: #fff;
  overflow: hidden;
  padding: 20rpx;
  padding-bottom: 20rpx;
}
.basic .left_a {
  float: left;
  padding-left: 20rpx;
}
.basic .left_a text {
  font-size: 28rpx;
  color: #333;
  line-height: 30rpx;
  line-height: 70rpx;
}
.basic .right_a {
  float: right;
  padding-right: 10rpx;
}
.basic .right_a text {
  font-size: 28rpx;
  float: right;
  color: #999;
  line-height: 70rpx;
}
.basic .right_a .img_a {
  float: right;
  padding: 30rpx 0rpx 20rpx 20rpx;
}
.basic .right_a .img_a image {
  width: 12rpx;
  height: 14rpx;
  display: block;
}
.quit {
  overflow: hidden;
  padding-top: 10%;
  position: fixed;
  bottom: 5%;
  left: 7%;
  width: 650rpx;
  margin: 0 auto;
  color: #fff;
  font-family: Microsoft YaHei;
}
.quit button {
  -webkit-border-radius: 50rpx 50rpx;
          border-radius: 50rpx 50rpx;
  background-color: #dce0e6;
}

