page {
  background-color: #f7f7f7;
}
.Box {
  background-color: #fff;
  overflow: hidden;
  width: 710rpx;
  padding: 20rpx 20rpx 0 20rpx;
}
.Box .listBox {
  width: 100%;
  overflow: hidden;
  height: 140rpx;
}
.Box .listBox .textBox {
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 30rpx;
  float: left;
  width: 590rpx;
  padding-left: 20rpx;
  overflow: hidden;
}
.Box .listBox .textBox .h2 {
  margin-top: 10rpx;
  overflow: hidden;
}
.Box .listBox .textBox .h2 .tit text {
  line-height: 60rpx;
  font-size: 34rpx;
  padding-right: 10rpx;
  float: left;
}
.Box .listBox .textBox .h2 .official {
  float: left;
  height: 30rpx;
  margin-top: 15rpx;
  border: 1px solid #FF6600;
  border-radius: 5rpx;
}
.Box .listBox .textBox .h2 .official text {
  float: left;
  text-align: center;
  padding-left: 5rpx;
  padding-right: 5rpx;
  font-size: 20rpx;
  color: #ff6600;
}
.Box .listBox .textBox .span {
  float: right;
}
.Box .listBox .textBox .span text {
  font-size: 24rpx;
  color: #999;
}
.Box .listBox .textBox .p {
  overflow: hidden;
}
.Box .listBox .textBox .p text {
  float: left;
  font-size: 26rpx;
  color: #666;
}
.Box .listBox .textBox .p .new {
  float: right;
  margin-right: 10rpx;
}
.Box .listBox .textBox .p .new text {
  font-size: 18rpx;
  color: #fff;
  padding: 5rpx 7rpx;
  background-color: #ff0000;
  border-radius: 30rpx;
}
.Box .listBox .imgBox {
  float: left;
  padding-top: 10rpx;
}
.Box .listBox .imgBox image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

