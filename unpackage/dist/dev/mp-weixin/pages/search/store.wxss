.topBox {
  overflow: hidden;
  border-bottom: 1px solid #f0f0f0;
  width: 710rpx;
  padding: 20rpx 20rpx 0 20rpx;
}
.topBox .on .ontext text {
  color: #333 !important;
}
.topBox .none {
  text-align: center;
  float: left;
  width: 50%;
}
.topBox .none .ontext text {
  font-size: 30rpx;
  color: #999;
}
.topBox .none .onimg {
  margin-left: 45%;
  margin-top: 20rpx;
}
.topBox .none .onimg image {
  display: block;
  width: 34rpx;
  height: 6rpx;
}
.listBox {
  width: 690rpx;
  overflow: hidden;
  padding: 20rpx;
}
.listBox .liBox {
  padding: 10rpx;
  float: left;
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  -webkit-box-shadow: 0 0 10rpx #ccc;
          box-shadow: 0 0 10rpx #ccc;
}
.listBox .liBox .imgBox {
  float: left;
}
.listBox .liBox .imgBox image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.listBox .liBox .texBox {
  float: left;
  padding-left: 20rpx;
}
.listBox .liBox .texBox .h2Box {
  padding-top: 5rpx;
}
.listBox .liBox .texBox .h2Box text {
  line-height: 50rpx;
  font-size: 32rpx;
  color: #333;
}
.listBox .liBox .texBox .spanBox text {
  font-size: 24rpx;
  color: #333;
}
.listBox .liBox .bottBox {
  float: right;
  margin-top: 25rpx;
  margin-right: 10rpx;
}
.listBox .liBox .bottBox text {
  font-size: 20rpx;
  color: #999;
  float: left;
  padding: 5rpx 20rpx;
  line-height: 40rpx;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 50rpx;
}
.content {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  display: block;
  width: 340rpx;
  margin-left: 25rpx;
  float: left;
  -webkit-box-shadow: 0 0 5rpx #ccc;
          box-shadow: 0 0 5rpx #ccc;
  border-radius: 20rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
}
.content .imgBox image {
  width: 100%;
  height: inherit;
  float: left;
}
.content .txt_a {
  padding-top: 10rpx;
  width: 90%;
  margin-left: 20rpx;
  float: left;
}
.content .txt_a text {
  font-size: 30rpx;
}
.content .txt_a .span_a {
  background-color: #fff;
  color: #ff6600;
  border: 1px solid #ff6600;
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  font-size: 18rpx;
  margin-right: 10rpx;
  line-height: 30rpx;
}
.content .txt_a .txt_aa text {
  border: 1px dotted #ff3333;
  background-color: #fff;
  font-size: 16rpx;
  line-height: 30rpx;
  padding: 5rpx 10rpx;
  color: #ff3333;
  margin-right: 20rpx;
  font-size: 20rpx;
}
.content .txt_a .txt_aas {
  padding-top: 10rpx;
}
.content .txt_a .txt_aas text {
  color: #333;
  font-size: 32rpx;
}
.content .txt_a .txt_aas text text {
  color: #ff3333;
  font-size: 32rpx;
  font-weight: bold;
}
.content .txt_a .txt_aas text:nth-child(2) {
  color: #999999;
  font-size: 24rpx;
  float: right;
  line-height: 50rpx;
}

