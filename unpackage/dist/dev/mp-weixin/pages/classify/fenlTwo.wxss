  margin-top: 30rpx;
  margin-bottom: 10rpx;
  display: black;
  width: 340rpx;
  margin-left: 25rpx;
  float: left;
  -webkit-box-shadow: 0 0 5px #ccc;
          box-shadow: 0 0 5px #ccc;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  padding-bottom: 20rpx;
