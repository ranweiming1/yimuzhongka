.bg_img {
  width: 100%;
}
.bg_img image:nth-child(1) {
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.bg_img image:nth-child(2) {
  width: 100%;
  height: 130rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.logo {
  position: absolute;
  left: 25%;
  top: 8%;
}
.logo image {
  width: 360rpx;
  height: 100rpx;
}
.uni-common-mt {
  position: fixed;
  left: 20rpx;
  top: 470rpx;
  width: 90%;
  margin: 0 auto;
  margin-left: 2%;
}
.uni-common-mt image {
  width: 30rpx;
  height: 38rpx;
  float: left;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
}
.uni-common-mt .uni-form-item {
  margin: 0 auto;
  width: 100%;
  float: left;
  margin-bottom: 40rpx;
  border-bottom: 1px solid #ccc;
}
.uni-common-mt .uni-form-item text {
  font-size: 24rpx;
  color: #666;
  float: right;
  padding-right: 50rpx;
  border-left: 1px solid #ccc;
  padding-left: 50rpx;
}
.uni-common-mt .uni-input {
  float: left;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
}
.bott {
  top: 800rpx !important;
  font-family: Microsoft YaHei;
}
.bott button {
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  line-height: 90rpx;
  background-color: #1a5fe3;
  -webkit-box-shadow: -1px 4px 5px #B5B5B5;
          box-shadow: -1px 4px 5px #B5B5B5;
}
.enroll {
  float: left;
  padding-top: 30rpx;
}
.enroll text {
  font-size: 26rpx;
  color: #333;
}
.forget {
  float: right;
  padding-top: 30rpx;
}
.forget text {
  font-size: 26rpx;
  color: #333;
}
.shortcut {
  display: block;
  text-align: center;
  position: fixed;
  bottom: 110rpx;
  left: 10%;
  font-size: 24rpx;
  color: #666;
}
.shortcut .link {
  display: block;
}
.shortcut .link image {
  margin: 50rpx;
  width: 85rpx;
  height: 85rpx;
}
.shortcut text {
  padding: 20rpx;
  line-height: 40rpx;
}
.shortcut image {
  width: 220rpx;
  height: 2rpx;
}

