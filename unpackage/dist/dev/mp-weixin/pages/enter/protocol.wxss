.bg_img {
  width: 100%;
}
.bg_img image:nth-child(1) {
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.bg_img image:nth-child(2) {
  width: 100%;
  height: 130rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.white {
  z-index: 999999;
  margin: 0 auto;
  background-color: #fff;
  width: 690rpx;
  height: initial;
  border-radius: 20rpx;
  -webkit-box-shadow: 0 0 5px #ccc;
          box-shadow: 0 0 5px #ccc;
  position: fixed;
  top: 5%;
  left: 30rpx;
  padding-bottom: 30rpx;
}
.white .title {
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
  font-size: 36rpx;
  border-bottom: 1px solid #ccc;
  font-family: Microsoft YaHei;
}
.white text {
  display: block;
  padding: 20rpx;
  color: #666;
  line-height: 50rpx;
  font-size: 26rpx;
}
.white .span {
  font-size: 26rpx;
  padding-bottom: 20rpx;
  color: #999;
  padding-left: 20rpx;
}
.white .span text {
  line-height: 40rpx;
}
.white .bott {
  width: 210rpx;
  margin: 0 auto;
}
.white .bott button {
  border-radius: 80rpx;
}

